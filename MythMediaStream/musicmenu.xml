<mythmenu name="MUSIC">

   <button>
      <type>MUSIC_PLAYLIST</type>
      <text>Playlists</text>
      <description>Create your</description>
      <action>MUSIC_CREATE_PLAYLIST</action>
   </button>

   <button>
       <type>MUSIC_IMPORT</type>
       <text>Files</text>      
       <description>Import your Music</description>
       <action>MUSIC_IMPORT</action>
   </button>

   <button>
      <type>MUSIC_SCAN</type>
      <text>Music</text>
      <description>Scan for new</description>
      <action>SETTINGS_SCAN</action>
   </button>

   <button>
        <type>MUSIC_RIP</type>
        <text>CD</text>
        <description>Import your</description>
        <action>JUMP Rip CD</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>EJECT</type>
        <text>Media</text>
        <description>Eject your</description>
        <action>EJECT</action>
    </button>

