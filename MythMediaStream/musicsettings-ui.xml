            <area>250,10,515,65</area>
            <font>menu_description</font>
            <case>upper</case>
            <align>right,bottom</align>
            <cutdown>yes</cutdown>
            <multiline>yes</multiline>
            <value>Configure Music folders and general options</value>
        </textarea>

        <textarea name="title" from="textarea_base">
            <area>250,75,515,65</area>
            <font>menu_active</font>
            <case>upper</case>
            <align>right,vcenter</align>
            <cutdown>yes</cutdown>
            <multiline>yes</multiline>
            <value>General Settings</value>
        </textarea>

        <!-- ================================================== -->
        <!-- screen content                                     -->
        <!-- ================================================== -->
        <textarea name="musiclocationlbl" from="textarea_base">
            <area>250,175,510,35</area>
            <value>Music Directory:</value>
        </textarea> 

        <textedit name="musiclocation" from="textedit_menu">
            <position>420,175</position>
        </textedit>

        <textarea name="musiccddevice_label" from="musiclocationlbl">
            <position>250,210</position>
            <value>CD device:</value>
        </textarea>

        <textedit name="musiccddevice" from="textedit_menu">
            <position>420,210</position>
        </textedit>

        <textarea name="musicaudiodevice_label" from="musiclocationlbl">
            <position>250,245</position>
            <value>Audio device:</value>
        </textarea>

        <textedit name="musicaudiodevice" from="textedit_menu">
            <position>420,245</position>
        </textedit>

        <textarea name="musicdefaultupmix_label" from="musiclocationlbl">
            <position>250,315</position>
            <value>Convert stereo to 5.1 sound:</value>
        </textarea>

        <checkbox name="musicdefaultupmix" from="checkbox_base">
            <position>735,315</position>
        </checkbox>

        <textarea name="nonid3filenameformat_label" from="musiclocationlbl">
            <position>250,385</position>
            <value>Filename Format:</value>
        </textarea>

        <textedit name="nonid3filenameformat" from="textedit_menu">
            <position>420,385</position>
        </textedit>

        <textarea name="ignoreid3tags_label" from="musiclocationlbl">
            <position>250,420</position>
            <value>Ignore ID3 Tags:</value>
        </textarea>

        <checkbox name="ignoreid3tags" from="checkbox_menu">
            <position>420,420</position>
        </checkbox>

        <textarea name="tagencoding_label" from="musiclocationlbl">
            <position>250,455</position>
            <value>Tag Encoding:</value>
        </textarea>

        <buttonlist name="tagencoding" from="selector_base">
            <position>420,455</position>
        </buttonlist>

        <textarea name="allowtagwriting_label" from="musiclocationlbl">
            <position>250,525</position>
            <value>Allow metadata to be written to tags:</value>
        </textarea>

        <checkbox name="allowtagwriting" from="checkbox_base">
            <position>735,525</position>
        </checkbox>

        <textarea name="helptext" from="textarea_base">
            <area>250,560,510,150</area>
            <cutdown>yes</cutdown>
            <font>smaller</font>
            <case>normal</case>
            <alpha>128</alpha>
            <align>hcenter,bottom</align>
            <multiline>yes</multiline>
        </textarea>

        <button name="save" from="button_base_menu">
            <position>790,175</position>
            <value>Save</value>
        </button>

        <button name="cancel" from="button_base_menu">
            <position>790,210</position>
            <value>Cancel</value>
        </button>

