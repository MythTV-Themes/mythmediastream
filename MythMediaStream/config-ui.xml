<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="iconimport">
        <imagetype name="background" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/settings.jpg</filename>
        </imagetype>
        <imagetype name="Menu_background_Sub2">
            <filename>images/shared/HomeBladeLeft.png</filename>
            <area>-600,0,846,720</area>
        </imagetype> 
        <imagetype name="Menu_Overlay">
            <area>1045,0,235,720</area> 
            <filename>images/shared/HomeRightOverlay.png</filename>
        </imagetype>
        <imagetype name="Menu_background_Sub3">
            <filename>images/shared/BlackTransparent.png</filename>
            <area>238,0,550,720</area>
        </imagetype> 
        <imagetype name="Menu_background_Sub4">
            <filename>images/shared/HomeBladeSub.png</filename>
            <area>240,0,560,720</area>
        </imagetype> 
        <imagetype name="Menu_background_Sub5">
            <filename>images/shared/HomeBladeSub.png</filename>
            <area>788,0,200,720</area>
        </imagetype> 

        <!-- ================================================== -->
        <!-- The clock                                          -->
        <!-- ================================================== -->
        <textarea name="clock" from="textarea_clock_base"/>

        <!-- ================================================== -->
        <!-- Screen description                                 -->
        <!-- ================================================== -->
        <textarea name="name" from="textarea_base">
            <area>250,10,515,65</area>
            <font>menu_description</font>
            <case>upper</case>
            <align>right,bottom</align>
            <cutdown>yes</cutdown>
            <multiline>yes</multiline>
            <value>Customize your channel icons</value>
        </textarea>

        <textarea name="pagetitle" from="textarea_base">
            <area>250,75,515,65</area>
            <font>menu_active</font>
            <case>upper</case>
            <align>right,vcenter</align>
            <cutdown>yes</cutdown>
            <multiline>yes</multiline>
            <value>Select Icons</value>
        </textarea>

        <!-- ================================================== -->
        <!-- screen content                                     -->
        <!-- ================================================== -->

        <buttonlist name="icons" from="buttonlist_dialog_wide">
            <position>250,175</position>
            <statetype name="buttonitem">
                <state name="active">
                    <imagetype name="icon">
                        <area>0,2,36,36</area>
                        <preserveaspect>no</preserveaspect>
                    </imagetype>
                    <imagetype name="glasoverlay">
                        <area>0,2,36,36</area>
                        <preserveaspect>no</preserveaspect>
                        <filename>images/shared/ButtonMenuGlass.png</filename>
                    </imagetype>
                    <textarea name="buttontext" from="textarea_base">
                        <area>40,0,460,40</area>
                        <align>left,vcenter</align>
                        <alpha>128</alpha>
                        <font>normal</font>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <imagetype name="icon">
                        <area>0,2,36,36</area>
                        <preserveaspect>no</preserveaspect>
                    </imagetype>
                    <imagetype name="glasoverlay">
                        <area>0,2,36,36</area>
                        <preserveaspect>no</preserveaspect>
                        <filename>images/shared/ButtonMenuGlass.png</filename>
                    </imagetype>
                    <textarea name="buttontext" from="textarea_base">
                        <area>40,0,460,40</area>
                        <align>left,vcenter</align>
                        <alpha>255</alpha>
                        <font>normal</font>
                    </textarea>
                </state>         
           <!--INACTIVE-->
           <state name="inactive" from="active">
               <alpha>255</alpha>
           </state>
           <!--SELECTED INACTIVE-->
           <state name="selectedinactive" from="active">
               <alpha>255</alpha>
           </state>
            </statetype>
        </buttonlist>

       <textarea name="status" from="textarea_base">
            <area>250,575,510,35</area>
        </textarea>

        <textarea name="manuallabel" from="status">
            <position>250,610</position>
            <value>Search terms:</value>
        </textarea>

        <textedit name="manualsearch" from="textedit_menu">
            <position>420,610</position>
        </textedit>

        <button name="search" from="button_base_menu">
            <position>790,175</position>
            <value>Search</value>
        </button>

        <button name="skip" from="button_base_menu">
            <position>790,210</position>
            <value>Skip</value>
        </button>

    </window>

