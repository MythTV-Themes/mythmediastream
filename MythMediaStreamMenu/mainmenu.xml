<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="MAIN">

    <button>
        <type>TV_WATCH_TV</type>
        <text>Television</text>
        <description>Watch live</description>
        <action>TV_WATCH_LIVE</action>
    </button>

    <button>
        <type>TV_WATCH_RECORDINGS</type>
        <text>Recordings</text>
        <description>Watch your</description>
        <action>TV_WATCH_RECORDING</action>
    </button>

    <button>
        <type>VIDEO_BROWSER</type>
        <text>Movies</text>
        <description>Watch your</description>
        <action>JUMP Video Default</action>
    </button>

    <button>
        <type>MUSIC_PLAY</type>
        <text>Music</text>
        <description>Listen to</description>
        <action>JUMP Play music</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>DVD_PLAY</type>
        <text>DVD</text>
        <description>Play a</description>
        <action>JUMP Play DVD</action>
        <depends>mythvideo</depends>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Pictures</text>
        <description>View your</description>
        <action>PLUGIN mythgallery</action>
        <depends>mythgallery</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather</text>
        <action>PLUGIN mythweather</action>
        <description>Check the</description>
        <depends>mythweather</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Internet</text>
        <description>Look what is on the</description>
        <action>MENU mms_web.xml</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>SETTINGS_GENERAL</type>
        <text>System</text>
        <description>Tools for your</description>
        <action>MENU mms_settings.xml</action>
    </button>

    <button>
        <type>SETUP_MENU</type>
        <text>Setup</text>
        <description>MythTV</description>
        <action>MENU main_settings.xml</action>
        <password>SetupPinCode</password>
    </button>

    <button>
        <type>TV_SCHEDULE_RECORDINGS</type>
        <text>EPG</text>
        <description>Use the</description>
        <action>MENU mms_guide.xml</action>
    </button>

</mythmenu>
